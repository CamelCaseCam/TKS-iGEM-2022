{
    //Promoter stuff here
    $InnerCode
    //Promoter stuff here
}


//From http://parts.igem.org/Featured_Parts:Cell-Cell-Signaling

sequence AllowQuorumDetection
{
    .LocalExpressionInCells
    {
        ShineDalgarnoSeq
        'AATAAACAA'
        LuxR
    }
}



sequence SendQuorumSignal
{
    .LocalExpressionInCells
    {
        ShineDalgarnoSeq
        'AATAAACAA'
        LuxI
    }
}

