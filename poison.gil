//This file should contain any source code related to the poison subconstruct


sequence construct
{
    JustProduceCyanide
}

//Where you define sequences doesn't matter
sequence JustProduceCyanide
{
    //Just produce the cyanide synthase genes
    .DefaultPromoter
    {
        HcnA
    }

    .DefaultPromoter
    {
        HcnB
    }

    .DefaultPromoter
    {
        HcnC
    }
}


